<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.su.enjoy.mapper.UserRepository">
    <!-- idには対応するメソッド名を記述 -->
    <!-- select処理なのでselectタグで囲う -->
    <select id="findByName" resultType="com.su.enjoy.domain.dto.user.UserEntity">
        select * from users where name = #{name}
    </select>
</mapper>