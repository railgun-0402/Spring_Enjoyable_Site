<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.su.enjoy.mapper.admin.HotelRepository">

    <!--findAll-->
    <select id="findAll" resultType="com.su.enjoy.model.hotel.Hotel">
        select * from hotels
    </select>

    <!--findById-->
    <select id="findHotelById" resultType="com.su.enjoy.model.hotel.Hotel">
        select * from hotels where id = #{id}
    </select>

    <!--insertHotel-->
    <insert id="insertHotel" parameterType="com.su.enjoy.model.hotel.Hotel">
        INSERT INTO hotels (
        name,
        image_name,
        description,
        price,
        capacity,
        postal_code,
        address,
        phone_number
        ) VALUES (
        #{name},
        #{image},
        #{description},
        #{price},
        #{capacity},
        #{postalCode},
        #{address},
        #{phoneNumber}
        );
<!--        <selectKey keyProperty="id" resultType="int" order="AFTER">-->
<!--            SELECT currval('hotels_id_seq')-->
<!--        </selectKey>-->
    </insert>
</mapper>